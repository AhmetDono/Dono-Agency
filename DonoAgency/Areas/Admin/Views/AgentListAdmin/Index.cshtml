@using EntityLayer.Concrete
@model List<Agent>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<hr class="my-5" />

<!-- Contextual Classes -->

<div class="card">
    <h5 class="card-header">All Properties</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>Agent Brand</th>
                    <th>Agent Name</th>
                    <th>Agent Photo</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody class="table-border-bottom-0">
                    <tr class="table-dark">
                        <td><i class="fab fa-bootstrap fa-lg text-primary me-3"></i> <strong>AGENT BRAND NAME</strong></td>
                        <td>@item.AgentName</td>
                        <td>
                            <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                <li data-bs-toggle="tooltip"
                                    data-popup="tooltip-custom"
                                    data-bs-placement="top"
                                    class="avatar avatar-xs pull-up"
                                    title="Lilian Fuller">
                                    <img src="@item.AgentPhoto" alt="Avatar" class="rounded-circle" />
                                </li>
                            </ul>
                        </td>
                        <td><span class="badge bg-label-success me-1">Status</span></td>
                        <td>
                            <div>
                                <a class="btn btn-info" href="/Agent/SingleAgent/@item.AgentID"> View In Site </a>
                                <a class="btn btn-danger" href="/Admin/AgentListAdmin/DeleteAgent/@item.AgentID"> Delete </a>
                            </div>
                        </td>
                    </tr>
                </tbody>
            }
        </table>
    </div>
</div>
<!--/ Contextual Classes -->

<hr class="my-5" />

