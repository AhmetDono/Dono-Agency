@using EntityLayer.Concrete
@model List<Propertie>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<hr class="my-5" />

<!-- Contextual Classes -->

<div class="card">
    <h5 class="card-header">All Properties</h5>
    <div style="
        position: absolute;
        right: 10%;
        top: 30px;
            " >
        <a href="/Admin/PropertieListAdmin/AddPropertie" class="btn btn-info">Add New Propertie</a>
    </div>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>Propertie Name</th>
                    <th>Agent</th>
                    <th>Agent Photo</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody class="table-border-bottom-0">
                    <tr class="table-dark">
                        <td><strong>@item.PropertieName</strong></td>
                        <td>@item.Agent.AgentName</td>
                        <td>
                            <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                <li data-bs-toggle="tooltip"
                                    data-popup="tooltip-custom"
                                    data-bs-placement="top"
                                    class="avatar avatar-xs pull-up"
                                    title="Lilian Fuller">
                                    <img src="@item.Agent.AgentPhoto" alt="Avatar" class="rounded-circle" />
                                </li>
                            </ul>
                        </td>
                        <td><span class="badge bg-label-success me-1">@item.Status</span></td>
                        <td>
                            <div>
                                <a class="btn btn-info" href="/Propertie/PropertieSingle/@item.PropertieID"> View In Site </a>
                                <a class="btn btn-warning" href="/Admin/PropertieListAdmin/UpdatePropertie/@item.PropertieID"> Edit </a>
                                <a class="btn btn-danger" href="/Admin/PropertieListAdmin/DeletePropertie/@item.PropertieID"> Delete </a>
                            </div>
                        </td>
                    </tr>
                </tbody>
            }
        </table>
    </div>
</div>
<!--/ Contextual Classes -->

<hr class="my-5" />

