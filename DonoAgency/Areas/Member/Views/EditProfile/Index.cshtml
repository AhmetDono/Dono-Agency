@model DonoAgency.Areas.Member.Models.UserEditViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>User Profile</h1>
    <form method="post" enctype="multipart/form-data">
        @Html.Label("Name")
        <input type="text" asp-for="name" class="form-control" />
        <br />
        @Html.Label("SurName")
        <input type="text" asp-for="surname" class="form-control" />
        <br />
        @Html.Label("Email")
        <input type="email" asp-for="mail" class="form-control" />
        <br />
        @Html.Label("Phone Number")
        <input type="text" asp-for="phonenumber" class="form-control" />
        <br />
        <div class="form-group">
            <label>Pick a Profile Picture</label>
            <input type="file" asp-for="Image" />
        </div>
        @Html.Label("Password")
        <input type="password" asp-for="password" class="form-control" />
        <br />
        @Html.Label("Confirm Password")
        <input type="password" asp-for="confirmpassword" class="form-control" />
        <br />
        <button class="btn btn-primary">Update Datas</button>
    </form>

